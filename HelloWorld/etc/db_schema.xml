<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name = "new_custom_table" resource="default" engine="innodb" comment="New Customer Table">
        <column xsi:type="int" name="post_id" padding ="6" unsigned="false" identity="true" comment="ID" nullable="false"/>
        <column xsi:type="varchar" name="name" length="255" comment="Name Customer"/>
        <column xsi:type="varchar" name="url_key"  length="255" comment="URL_Key"/>
        <column xsi:type="varchar" name="email_customer" comment="Email_Costumer"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>
</schema>